pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
            sh 'echo "Hello World"'
            script {
                dir ("Folder1")
                {
                def FILE
                for FILE in ${ls}
                do
                echo "$FILE"
                done
                }
                }
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                '''
            }
        }
    }
}
